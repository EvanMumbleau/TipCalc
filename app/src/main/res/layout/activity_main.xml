<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="css.evanmumbleau.tipcalc.MainActivity">

    <TextView
        android:text="Number in Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewD2"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editTextBill"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/editTextBill"
        android:text="0.00"
        android:layout_below="@+id/textViewD"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Please enter the Bill Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewD"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="33dp"
        android:id="@+id/editTextNumParty"
        android:layout_alignTop="@+id/textViewD2"
        android:layout_alignParentStart="true"
        android:text="1" />

    <Button
        android:text="Calculate Tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="onClickButtonCalc"
        android:layout_below="@+id/editTextNumParty"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTip"
        android:text="0.00"
        android:layout_below="@+id/button"
        android:layout_toStartOf="@+id/tipPP"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipPP"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textViewD2" />

</RelativeLayout>
